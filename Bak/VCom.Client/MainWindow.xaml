<Window x:Class="VCom.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VCom.Client"
        xmlns:converters="clr-namespace:VCom.Client.Converters"
        xmlns:models="clr-namespace:VCom.Client.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="VCOM Port Forwarder" 
        Height="720" Width="1000"
        MinHeight="650" MinWidth="950"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <!-- All resources (styles, converters, etc.) remain the same -->
    <Window.Resources>
        <converters:NullToBooleanConverter x:Key="NullToFalseConverter" />
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="ProtocolTypeValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ProtocolType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="ParityValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Parity"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="StopBitsValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:StopBits"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style TargetType="ListBoxItem" x:Key="ModernListBoxItemStyle">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" BorderBrush="Transparent" BorderThickness="1" Padding="10" CornerRadius="4" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#E5F3FF"/>
                                <Setter Property="Foreground" Value="#005FB8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="border" Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TabControl" x:Key="ModernTabControlStyle">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="TabItem" x:Key="ModernTabItemStyle">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style for the On/Off Toggle Switch -->
        <Style TargetType="ToggleButton" x:Key="ModernToggleSwitchStyle">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundBorder" 
                            Background="#CCCCCC" 
                            CornerRadius="12"/>
                            <Border x:Name="Thumb" 
                            Background="White" 
                            Width="20" Height="20" 
                            CornerRadius="10" 
                            HorizontalAlignment="Left" 
                            Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main layout grid: 2 columns -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: List of COM Ports (Unchanged) -->
        <Border Grid.Column="0" Background="#EFF6FC" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Virtual COM Ports" FontWeight="SemiBold" FontSize="16" Margin="10,15,10,10"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding Ports}" SelectedItem="{Binding SelectedPort, Mode=TwoWay}" Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource ModernListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding ComPortName}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding Status}" Foreground="Gray" FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Refresh List" 
                            Width="170" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding RefreshCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- RIGHT PANEL: Details / Welcome -->
        <ContentControl Grid.Column="1" Content="{Binding SelectedPort}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <!-- This template is shown when a port IS selected -->
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="{x:Type models:PortConfig}">
                                <!-- CHANGED: Replaced ScrollViewer/StackPanel with a Grid for better space management -->
                                <Grid Margin="30,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <!-- For Title -->
                                        <RowDefinition Height="*" />
                                        <!-- For TabControl to fill space -->
                                        <RowDefinition Height="Auto" />
                                        <!-- For Save Button -->
                                    </Grid.RowDefinitions>

                                    <!-- Title Area -->
                                    <Grid Grid.Row="0" Margin="0,0,0,20">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ComPortName}" FontSize="24" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Status}" FontSize="14" Foreground="Gray"/>
                                        </StackPanel>

                                        <!-- This is the new ToggleButton -->
                                        <ToggleButton IsChecked="{Binding IsEnabled}" 
                                          Style="{StaticResource ModernToggleSwitchStyle}"
                                          HorizontalAlignment="Right" 
                                          VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- TabControl fills the middle row -->
                                    <TabControl Grid.Row="1" Style="{StaticResource ModernTabControlStyle}" ItemContainerStyle="{StaticResource ModernTabItemStyle}">
                                        <TabItem Header="Configuration">
                                            <!-- The content here no longer needs to worry about scrolling -->
                                            <StackPanel Margin="0,20,0,0">
                                                <TextBlock Text="Network Settings" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                                <Border Background="White" CornerRadius="4" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Label Grid.Row="0" Grid.Column="0" Content="Target IP" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Network.Hostname}" Margin="5" Padding="5"/>
                                                        <Label Grid.Row="1" Grid.Column="0" Content="Port" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Network.Port}" Margin="5" Padding="5"/>
                                                        <Label Grid.Row="2" Grid.Column="0" Content="Protocol" VerticalAlignment="Center"/>
                                                        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Source={StaticResource ProtocolTypeValues}}" SelectedItem="{Binding Network.Protocol}" Margin="5" Padding="5"/>
                                                    </Grid>
                                                </Border>
                                                <TextBlock Text="Serial Settings" FontWeight="SemiBold" FontSize="14" Margin="0,20,0,5"/>
                                                <Border Background="White" CornerRadius="4" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Label Grid.Row="0" Grid.Column="0" Content="Baud Rate" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Serial.BaudRate}" Margin="5" Padding="5"/>
                                                        <Label Grid.Row="1" Grid.Column="0" Content="Data Bits" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Serial.DataBits}" Margin="5" Padding="5"/>
                                                        <Label Grid.Row="2" Grid.Column="0" Content="Parity" VerticalAlignment="Center"/>
                                                        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Source={StaticResource ParityValues}}" SelectedItem="{Binding Serial.Parity}" Margin="5" Padding="5"/>
                                                        <Label Grid.Row="3" Grid.Column="0" Content="Stop Bits" VerticalAlignment="Center"/>
                                                        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Source={StaticResource StopBitsValues}}" SelectedItem="{Binding Serial.StopBits}" Margin="5" Padding="5"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </TabItem>
                                        <TabItem Header="Live Terminals">
                                            <!-- CHANGED: The Terminals Grid now fills the entire TabItem -->
                                            <Grid Margin="0,20,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <!-- Outgoing Data -->
                                                <DockPanel Grid.Column="0" Margin="0,0,10,0">
                                                    <TextBlock Text="Outgoing Data (To Network)" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" DockPanel.Dock="Top"/>
                                                    <!-- REMOVED Height property to allow stretching -->
                                                    <TextBox Text="{Binding DataContext.OutgoingDataLog, RelativeSource={RelativeSource AncestorType=Window}}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="#2d2d2d" Foreground="#dcdcdc" TextWrapping="Wrap" BorderThickness="0"/>
                                                </DockPanel>
                                                <!-- Incoming Data -->
                                                <DockPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <TextBlock Text="Incoming Data (To COM Port)" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" DockPanel.Dock="Top"/>
                                                    <!-- REMOVED Height property to allow stretching -->
                                                    <TextBox Text="{Binding DataContext.IncomingDataLog, RelativeSource={RelativeSource AncestorType=Window}}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="#2d2d2d" Foreground="#dcdcdc" TextWrapping="Wrap" BorderThickness="0"/>
                                                </DockPanel>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>

                                    <!-- Save Button is now in the bottom row -->
                                    <Button Grid.Row="2" Content="Save Changes" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0" Style="{StaticResource ModernButtonStyle}" Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </Grid>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <!-- This trigger is activated when no port is selected (Content is null) -->
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6">
                                                <TextBlock Text="VCOM Port Forwarder" FontSize="24" FontWeight="Light" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Select a port from the list to view its configuration or add a new one to get started." FontSize="14" Foreground="Gray" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>